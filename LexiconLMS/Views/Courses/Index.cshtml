@model IEnumerable<LexiconLMS.Models.Course>


<div class="row">
    <div class="col-md-8">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="col-md-4">
        <br />
        @Html.ActionLink("Add Course", "Create", "Courses", new { @class = "btn btn-default btn-add" })
    </div>
</div>

