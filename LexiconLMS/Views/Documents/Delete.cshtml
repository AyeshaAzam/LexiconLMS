@model LexiconLMS.Models.Document

@{
    ViewBag.Title = "Delete Document?";
}

<h1>@ViewBag.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Document</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Filename)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Filename)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FileSize)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileSize)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateUploaded)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateUploaded)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MimeType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MimeType.Name)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.FileType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileType)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" id="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-delete btn-with-cancel" />
            <a class="cancel-link" href="@ViewBag.ReturnUrl">Back</a>
        </div>
    }
</div>
